  "dependencies": {
    "@graphql-tools/schema": "^10.0.2",
    "@graphql-tools/utils": "^10.0.12",
    "@graphql-tools/wrap": "^10.0.1",
    "graphql": "^16.8.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@nearform/sql": "^1.10.5",
    "@types/node": "^24.0.3",
    "c8": "^10.1.2",
